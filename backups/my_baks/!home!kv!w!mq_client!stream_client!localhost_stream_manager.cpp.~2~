#include <boost/circular_buffer.hpp>

int main(int /*argc*/, char* /*argv*/[]) {
  
  // boost::circular_buffer_space_optimized(capacity_type capacity_ctrl, 
// 					 size_type n, 
// 					 const_reference item, 
// 					 const allocator_type& alloc = allocator_type()
// 					 );

  boost::circular_buffer_space_optimized<int> cb(capacity_type capacity_control(3, 0));

  cb.push_back(1);
  cb.push_back(2);
  cb.push_back(3);

  int a = cb[0];  // a == 1
  int b = cb[1];  // b == 2
  int c = cb[2];  // c == 3
  
  return 0;
}
